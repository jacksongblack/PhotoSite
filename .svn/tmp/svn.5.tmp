@font-face {
    font-family: Yanone Kaffeesatz;
    src: url('<%= asset_path("YanoneKaffeesatz-Regular.eot")%>');
    src: local("Yanone Kaffeesatz"), url('<%= asset_path('YanoneKaffeesatz-Regular.ttf')%>');
}
@font-face {
    font-family: scriptc;
    src: url('<%= asset_path("scriptc.eot")%>');
    src: local("scriptc"), url('<%= asset_path('scriptc_.ttf')%>');
}
@font-face {
    font-family: News Cycle;
    src: url('<%asset_path('NewsCycle-Regular.eot')%>');
    src: local("News Cycle"), url('<%=asset_path('NewsCycle-Regular.ttf')%>');
}

html {
    height: 100%;
}

* {
    margin: 0;
    padding: 0;
}

    /* tell the browser to render HTML 5 elements as block */
article, aside, figure, footer, header, hgroup, nav, section {
    display: block;
}

body {
    font: normal .80em arial, sans-serif;
}

p {
    padding: 7px 0 7px 0;
    line-height: 1.7em;
}

img {
    border: 0;
}

h1, h2, h3, h4, h5, h6 {
    font: normal 200% 'Yanone Kaffeesatz', arial, sans-serif;
    margin: 0 0 15px 0;
    padding: 0 0 5px 0;
}

h2 {
    font: normal 170% 'Yanone Kaffeesatz', arial, sans-serif;
    margin: 0;
    padding: 0 0 8px 0;
}

h3 {
    font: normal 150% arial, sans-serif;
}

h4, h5, h6 {
    margin: 0;
    padding: 0 0 5px 0;
    font: normal 110% arial, sans-serif;
    line-height: 1.5em;
}

h5, h6 {
    font: italic 95% arial, sans-serif;
    padding-bottom: 15px;
}

span, span:hover, a, a:hover {
    outline: none;
    text-decoration: none;
}

span:hover, a:hover {
    text-decoration: none;
}

a:link {
    text-decoration: none;
}

ul {
    margin: 2px 0 22px 17px;
}

ul li {
    list-style-type: circle;
    margin: 0 0 0 0;
    padding: 0 0 4px 5px;
}

ol {
    margin: 8px 0 22px 20px;
}

ol li {
    margin: 0 0 11px 0;
}

#main, #header, #logo, #menubar, #site_content, #footer {
    margin-left: auto;
    margin-right: auto;
}

#main {
    width: 1920px;
    margin: 20px auto;
}

header {
    width: 80%;
    height: 105px;
}

#logo {
    width: 250px;
    float: left;
    height: 100px;
    background: transparent;
    padding: 0 0 10px 440px;
}

#logo h1 {
    font: normal 160% 'Yanone Kaffeesatz', arial, sans-serif;
    padding: 45px 0 0 17px;
}

#logo h1 a:hover {
    text-decoration: none;
}

#site_content {
    width: 1024px;
    overflow: hidden;
    margin: 36px auto 0 auto;
    padding: 0;
}

#left_content {
    float: left;
    text-align: justify;
    width: 30%;
    padding: 20px 0 5px 25px;
    margin: 0;
}

#left_content ul {
    margin: 2px 0 22px 0px;
}

#left_content ul li {
    list-style-type: none;
    margin: 0 0 0 0;
    padding: 2px 0 2px 28px;
    line-height: 1.5em;
}

#right_content {
    float: right;
    width: 60%;
    padding: 0;
    min-height: 450px;
}

#right_content img {
    float: left;
}

footer {
    width: 1930px;
    font: normal 90% arial, sans-serif;
    padding: 50px 20px 5px 0;
    text-align: center;
    background: transparent;
    color:#a0a0a0;
    text-decoration: none;
}
footer a{
    color:#a0a0a0;
}

    /* styling for the slideshow on the homepage */
div#fe {
    width: 60%;
    font: normal 100% arial, sans-serif;
    text-align: center;
    color: #FFFFFF;
    margin: 0 0 0 20%;

}
div.edit_field textarea{
    width: 60%;
    height: 100%;
}
div.edit_field input{
    width: 60%;
    height: 100%;
}

#fi {

    text-align: center;
}

ul.slideshow {
    width: 1024px;
    height: 632px;
    overflow: hidden;
    position: relative;
    margin: 0;
    padding: 0;
}

ul.slideshow li {
    position: absolute;
    margin: 0;
    padding: 0;
    left: 0;
    right: 0;
    list-style: none;
}

ul.slideshow li.show {
    z-index: 500;
}

ul img {
    border: none;
}

#slideshow-caption {
    width: 950px;
    height: 90px;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 500;
}

#slideshow-caption .slideshow-caption-container {
    padding: 20px 25px 0 25px;
    z-index: 1000;
}

#slideshow-caption p {
    padding: 0;
    font: normal 130% arial, sans-serif;
}

    /* form styling */
.form_settings {
    margin: 0;
}

.form_settings p {
    padding: 0 0 10px 0;
}

.form_settings span {
    padding: 5px 0;
    float: left;
    width: 170px;
    text-align: left;
}

.form_settings input, .form_settings textarea {
    padding: 4px;
    width: 252px;
    font: 100% 'trebuchet ms', arial, sans-serif;
    border: 0;
    border-bottom: 1px solid;
    background: transparent;
}

.form_settings .submit {
    font: 170% 'Yanone Kaffeesatz', arial, sans-serif;
    border: 0;
    width: 100px;
    margin: 0 0 0 162px;
    height: 33px;
    padding: 2px 0 3px 0;
    cursor: pointer;
    border-radius: 6px 6px 6px 6px;
    -webkit-border-radius: 6px 6px 6px 6px;
    -moz-border-radius: 6px 6px 6px 6px;
}

.form_settings textarea, .form_settings select {
    font: 100% 'trebuchet ms', arial, sans-serif;
    border: 1px solid;
    border-radius: 6px 6px 6px 6px;
    -webkit-border-radius: 6px 6px 6px 6px;
    -moz-border-radius: 6px 6px 6px 6px;
    width: 250px;
    overflow: auto;
}

.form_settings select {
    width: 304px;
}

.form_settings .checkbox {
    margin: 4px 0;
    padding: 0;
    width: 14px;
    border: 0;
    background: none;
}

    /* styling for the blog page */
#blog_container h4 {
    font: normal 160% 'Yanone Kaffeesatz', arial, sans-serif;
    margin: 0 0 15px 0;
    padding: 5px 0;
}

#blog_container h4.select {
    width: 360px;
}

.blog {
    background: url(<%= asset_path('calendar.png')%>) no-repeat;
    width: 54px;
    height: 46px;
    float: left;
    margin: 0 15px 0 0;
}

.blog h2 {
    font: bold 90% arial, sans-serif;
    text-shadow: none;
    text-align: center;
    margin: 0;
    padding: 4px 0 0 0;
}

.blog h3 {
    font: 140% arial, sans-serif;
    text-shadow: none;
    margin: 0;
    text-align: center;
    padding: -10px 0 0 0;
}

#blog_text {
    padding: 50px;
    overflow: auto;
    height: 100%;
}

#blog_text h1 {
    font: normal 100% <%= asset_path('Yanone Kaffeesatz') %>, arial, sans-serif;;
    margin: 0 0 15px 0;
    padding: 5px 0;
}

    /* stylesheet for sooperFish by www.sooperthemes.com -- author: jurriaan roelofs */
html body ul.sf-menu ul, html body ul.sf-menu ul li {
    width: 180px;
}

html body ul.sf-menu ul ul {
    margin: 0 0 0 180px;
}

ul.sf-menu, ul.sf-menu * {
    margin: 0;
    padding: 0;
}

ul.sf-menu {
    display: block;
    position: relative;
}

ul.sf-menu li {
    display: block;
    list-style: none;
    float: left;
    position: relative;
}

ul.sf-menu li:hover {
    visibility: inherit; /* fixes IE7 'sticky bug' */
}

ul.sf-menu a {
    position: relative;
    z-index: 0;
}

ul.sf-menu a:hover {
    z-index: 99;
}

ul.sf-menu span {
    position: absolute;
    left: -999em;
    visibility: hidden;

}

ul.sf-menu a:hover span {
    visibility: visible;
    top: 5px;
    left:10px;
    cursor: pointer;
    padding: 0 10px 0 10px;

}

ul.sf-menu ul {
    position: absolute;
    left: 0;
    width: 150px;
    top: auto;

}

ul.sf-menu ul a {
    zoom: 1; /* IE6/7 fix */
}

ul.sf-menu ul li {
    float: left; /* Must always be floated otherwise there will be a rogue 1px margin-bottom in IE6/7 */
    width: 150px;
}

ul.sf-menu ul ul {
    top: 0;
    margin: 0 0 0 150px;
}

ul.sf-menu li:hover ul, ul.sf-menu li:focus ul, ul.sf-menu li.sf-hover ul,
ul.sf-menu ul li:hover ul, ul.sf-menu ul li:focus ul, ul.sf-menu ul li.sf-hover ul,
ul.sf-menu ul ul li:hover ul, ul.sf-menu ul ul li:focus ul, ul.sf-menu ul ul li.sf-hover ul,
ul.sf-menu ul ul ul li:hover ul, ul.sf-menu ul ul ul li:focus ul, ul.sf-menu ul ul ul li.sf-hover ul {
    left: auto;
}

ul.sf-menu li:hover ul ul, ul.sf-menu li:focus ul ul, ul.sf-menu li.sf-hover ul ul,
ul.sf-menu ul li:hover ul ul, ul.sf-menu ul li:focus ul ul, ul.sf-menu ul li.sf-hover ul ul,
ul.sf-menu ul ul li:hover ul ul, ul.sf-menu ul ul li:focus ul ul, ul.sf-menu ul ul li.sf-hover ul ul,
ul.sf-menu ul ul ul li:hover ul ul, ul.sf-menu ul ul ul li:focus ul ul, ul.sf-menu ul ul ul li.sf-hover ul ul {
    left: -999999px;
}

    /* theming the menu */
nav {
    width: 650px;
    margin: 1px 36px 0 auto;
    float: right;
    padding: 35px 0 0 0;
    font-size: 12px;
    font-weight: bold;

}

#nav li a:hover, #nav a:hover span {
    color: #FFF;
    background: #000000;

}

ul#nav {
    float: right;
    margin: 25px 10px 0 0;
}

ul#nav li a {
    font: normal 120% 'News Cycle', sans-serif;
    text-decoration: none;
    outline: none;
    text-align: center;
    z-index: 10;
    display: block;
    float: left;
    height: 30px;
    padding: 5px 20px 6px 20px;
    position: relative;
    overflow: hidden;
}

ul#nav ul {
    margin-top: 40px;
    padding-bottom: 10px;
}


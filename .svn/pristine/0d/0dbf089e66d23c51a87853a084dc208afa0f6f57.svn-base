<!--<div id="site_content">-->
<div id="left_content">
  <div id="blog_container">

    <% unless @announcement.nil? %>
        <div class="blog"><h2><%= @announcement.created_at.strftime("%y-%m") %></h2>

          <h3><%= @announcement.created_at.strftime("%e") %></h3></div>

        <h4 class="select"><%= link_to @announcement.name, announcement_path(:id => @announcement.id) %></h4>

        <p><%= @announcement.summary %> <%= link_to "更多", announcement_path(:id => @announcement.id) %>
          <% unless find_user.nil? %>
              <%= link_to "删除", delete_message_path(:id => @announcement.id) %>
          <% end %>
        </p>
    <% end %>

    <% @announcements.each do |announcement| %>
        <% if announcement.name != @announcement.name %>
            <div class="blog"><h2><%= announcement.created_at.strftime("%y-%m") %></h2>

              <h3><%= announcement.created_at.strftime("%e") %></h3></div>
            <h4><%= link_to announcement.name, announcement_path(:id => announcement.id) %></h4>

            <p><%= announcement.summary %> <%= link_to "更多", announcement_path(:id => announcement.id) %>
              <% unless find_user.nil? %>
                  <%= link_to "删除", delete_message_path(:id => announcement.id) %>
              <% end %>
            </p>
        <% end %>
    <% end %>
  </div>
</div>
<div id="right_content">
  <% unless @announcement.nil? %>
      <div id="blog_text">
        <h1><%= @announcement.name %> </h1>
        <%= @announcement.content %>
      </div>
  <% end %>
</div>
<%= will_paginate @announcements, :prev_label => '上一页', :next_label => '下一页' %>


</br>
<div class="albums">
  <ul>
    <% @albums.each do |album| %>
        <li>
          <%= link_to show_path(:album_id => album.id), :class => "thumb" do %>
              <% unless  album.images.first.nil? %><%= image_tag album.images.first.photo_url(:thumb),:width => "125px",:height => "150px" %>
                  <% else %><%= image_tag "no_image.jpg" ,:width => "125px",:height => "150px"%>
              <% end %>
          <% end %>
          <div class="album-name">
          <% unless find_user.nil? %>
          <%= link_to "修改相册名称", edit_album_path(album) %>
          <%= link_to "删除相册", delete_album_path(:id => album.id) %>
           <% end %>
         </div>
        <div class="album-name">
        <%= album.name %>
        </div>
        </li>
    <% end %>
  </ul>
  <%= will_paginate @albums,:prev_label=> '上一页',:next_label=> '下一页'%>
</div>
共<%=@albums.total_entries%>条
